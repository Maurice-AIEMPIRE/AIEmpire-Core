<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.aiempire.guardian</string>

  <key>Comment</key>
  <string>System Guardian - monitors RAM/CPU and auto-kills heavy processes to prevent system instability</string>

  <key>ProgramArguments</key>
  <array>
    <string>/opt/homebrew/bin/python3</string>
    <string>/Users/maurice/AIEmpire-Core/antigravity/system_guardian.py</string>
    <string>--check</string>
  </array>

  <key>StartInterval</key>
  <integer>30</integer>

  <key>RunAtLoad</key>
  <true/>

  <key>StandardOutPath</key>
  <string>/Users/maurice/.antigravity/logs/guardian.out.log</string>
  <key>StandardErrorPath</key>
  <string>/Users/maurice/.antigravity/logs/guardian.err.log</string>

  <key>ProcessType</key>
  <string>Background</string>

  <key>LowPriorityIO</key>
  <true/>

  <key>Nice</key>
  <integer>10</integer>
</dict>
</plist>
