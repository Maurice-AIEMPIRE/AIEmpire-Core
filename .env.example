# ==============================================================
# AIEmpire-Core - Environment Variables
# Copy to .env and fill in your values
# ==============================================================

# --- REQUIRED: Moonshot/Kimi API (primary cloud model) ---
MOONSHOT_API_KEY=sk-your-moonshot-api-key-here

# --- OPTIONAL: Google Gemini API ---
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_CLOUD_REGION=europe-west4
# VERTEX_AI_ENABLED=false

# --- OPTIONAL: Anthropic/Claude API (fallback for critical tasks) ---
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# --- OPTIONAL: GitHub Integration ---
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_REPO=Maurice-AIEMPIRE/AIEmpire-Core

# --- OPTIONAL: Ollama (local models, free) ---
OLLAMA_BASE_URL=http://localhost:11434
# OFFLINE_MODE=false

# --- OPTIONAL: X/Twitter API (for auto-posting) ---
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# --- OPTIONAL: Telegram Bot (Remote Control) ---
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# IMPORTANT: Set this to YOUR Telegram user ID for security!
# Without this, the bot will reject ALL commands.
# Find your ID: message @userinfobot on Telegram
TELEGRAM_OWNER_ID=your-telegram-user-id

# --- OPTIONAL: Gumroad (Digital Products) ---
# GUMROAD_ACCESS_TOKEN=your-gumroad-token
