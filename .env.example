# AI Empire - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# API Keys
# ============================================

# OpenAI API Key (for Claude, GPT, etc.)
OPENAI_API_KEY=your_openai_key_here

# Moonshot/Kimi API Key (cost-effective LLM)
MOONSHOT_API_KEY=your_moonshot_key_here

# Anthropic Claude API Key
ANTHROPIC_API_KEY=your_anthropic_key_here

# ============================================
# Database Configuration
# ============================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/aiempire
POSTGRES_USER=aiempire
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=aiempire

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=optional_redis_password

# SQLite (for CRM)
CRM_DATABASE_PATH=./crm/database.sqlite

# ============================================
# Service Ports
# ============================================

# CRM Server
CRM_PORT=3500

# OpenClaw
OPENCLAW_PORT=18789
OPENCLAW_API_PORT=8080

# Redis
REDIS_PORT=6379

# PostgreSQL
POSTGRES_PORT=5432

# Ollama
OLLAMA_PORT=11434

# ============================================
# X/Twitter Configuration
# ============================================

TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# ============================================
# n8n Configuration
# ============================================

N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me
N8N_ENCRYPTION_KEY=your_n8n_encryption_key

# ============================================
# Email Configuration (Optional)
# ============================================

SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@aiempire.com

# ============================================
# Payment/Revenue (Optional)
# ============================================

# Gumroad
GUMROAD_API_KEY=your_gumroad_key

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# ============================================
# Feature Flags
# ============================================

# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_LOGGING=true
DEBUG_MODE=false

# ============================================
# Environment
# ============================================

NODE_ENV=development
PYTHON_ENV=development

# ============================================
# Security
# ============================================

# JWT Secret (for authentication)
JWT_SECRET=your_super_secret_jwt_key_change_this

# Session Secret
SESSION_SECRET=your_session_secret_change_this

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3500,http://localhost:3000

# ============================================
# AI/LLM Configuration
# ============================================

# Model preferences
DEFAULT_MODEL=claude-3-sonnet
FALLBACK_MODEL=gpt-4
COST_EFFECTIVE_MODEL=kimi-k2.5

# Rate limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_TOKENS_PER_REQUEST=4000

# ============================================
# Monitoring & Logging
# ============================================

# Log level: debug, info, warn, error
LOG_LEVEL=info
LOG_FORMAT=json

# Sentry (optional)
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# Notes
# ============================================

# 1. Never commit the .env file to git
# 2. Keep .env.example updated with new variables
# 3. Use strong, unique passwords in production
# 4. Rotate keys regularly (every 90 days)
# 5. Use separate keys for dev/staging/production
