# ==============================================================
# AIEmpire-Core - Environment Variables
# Copy to .env and fill in your values
# ==============================================================

# ═══════════════════════════════════════════════════════════════
# GOOGLE GEMINI (Primary AI Provider)
# Get your key: https://aistudio.google.com/apikey
# ═══════════════════════════════════════════════════════════════
GEMINI_API_KEY=your-gemini-api-key-here

# ═══════════════════════════════════════════════════════════════
# GOOGLE CLOUD (Vertex AI, Storage, Cloud Run)
# ═══════════════════════════════════════════════════════════════
GOOGLE_CLOUD_PROJECT=your-gcloud-project-id
GOOGLE_CLOUD_REGION=europe-west1
VERTEX_AI_ENABLED=false

# ═══════════════════════════════════════════════════════════════
# OLLAMA (Local Models - FREE, Offline)
# ═══════════════════════════════════════════════════════════════
OLLAMA_BASE_URL=http://localhost:11434
OFFLINE_MODE=false

# ═══════════════════════════════════════════════════════════════
# MOONSHOT/KIMI (Backup Cloud Provider)
# ═══════════════════════════════════════════════════════════════
MOONSHOT_API_KEY=sk-your-moonshot-api-key-here

# ═══════════════════════════════════════════════════════════════
# ANTHROPIC/CLAUDE (Fallback for critical tasks)
# ═══════════════════════════════════════════════════════════════
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# ═══════════════════════════════════════════════════════════════
# GITHUB INTEGRATION
# ═══════════════════════════════════════════════════════════════
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_REPO=mauricepfeifer-ctrl/AIEmpire-Core

# ═══════════════════════════════════════════════════════════════
# X/TWITTER API (Auto-Posting)
# ═══════════════════════════════════════════════════════════════
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# ═══════════════════════════════════════════════════════════════
# TELEGRAM BOT (Mobile Control)
# ═══════════════════════════════════════════════════════════════
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ═══════════════════════════════════════════════════════════════
# STRIPE (Payments)
# ═══════════════════════════════════════════════════════════════
STRIPE_SECRET_KEY=sk_live_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
