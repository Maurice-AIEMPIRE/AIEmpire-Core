# Optional overrides for daily content sprint automation.
# Copy to:
#   ~/Library/Application Support/ai-empire/daily_content_sprint.env

# Force one channel every day (optional). If set, weekday rotation is ignored.
# SPRINT_CHANNEL="YouTube"

SPRINT_POSITIONING="Philosophie x AI"
SPRINT_OFFER="AI Clarity Sprint"
SPRINT_CTA_KEYWORD="CLARITY"

# Default weekday rotation (1=Monday ... 7=Sunday)
MONDAY_CHANNEL="YouTube"
TUESDAY_CHANNEL="X"
WEDNESDAY_CHANNEL="YouTube Shorts"
THURSDAY_CHANNEL="X"
FRIDAY_CHANNEL="YouTube"
SATURDAY_CHANNEL="X"
SUNDAY_CHANNEL="Strategy"
