{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "node",
			"dockerBuild": {
				"dockerfile": "${workspaceFolder}/crm/Dockerfile",
				"context": "${workspaceFolder}/crm",
				"pull": true
			},
			"node": {
				"package": "${workspaceFolder}/crm/package.json"
			}
		},
		{
			"label": "AI: Fix Current File",
			"type": "shell",
			"command": "python3",
			"args": [
				"${workspaceFolder}/antigravity/godmode_router.py",
				"fix",
				"Fix issues in ${fileBasename}"
			],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "AI: Code Feature",
			"type": "shell",
			"command": "python3",
			"args": [
				"${workspaceFolder}/antigravity/godmode_router.py",
				"code",
				"${input:featureDescription}"
			],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "AI: Review Code",
			"type": "shell",
			"command": "python3",
			"args": [
				"${workspaceFolder}/antigravity/godmode_router.py",
				"qa",
				"Review code quality for ${fileBasename}"
			],
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "System: Optimize AI",
			"type": "shell",
			"command": "bash",
			"args": [
				"${workspaceFolder}/scripts/quick_launch.sh",
				"--bench"
			],
			"problemMatcher": []
		},
		{
			"label": "System: Mission Control",
			"type": "shell",
			"command": "python3",
			"args": [
				"${workspaceFolder}/mission_control.py"
			],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "System: Memory Monitor",
			"type": "shell",
			"command": "bash",
			"args": [
				"${workspaceFolder}/scripts/memory_monitor.sh"
			],
			"isBackground": true,
			"problemMatcher": {
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^Starting memory monitor",
					"endsPattern": "^Monitor running"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "System: Clean RAM",
			"type": "shell",
			"command": "python3",
			"args": [
				"${workspaceFolder}/scripts/smart_ollama_launch.py",
				"--clean"
			],
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"id": "featureDescription",
			"description": "What feature do you want to add?",
			"default": "Add logging to this file",
			"type": "promptString"
		}
	]
]
}